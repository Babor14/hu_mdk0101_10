<Window x:Class="hu_mdk0101_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hu_mdk0101_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Content="вычислить" HorizontalAlignment="Center" Margin="0,301,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock x:Name="firstmastext" HorizontalAlignment="Left" Margin="373,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="secondmastext" HorizontalAlignment="Center" Margin="0,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="267" Foreground="#FF8E3A3A"/>
        <Label Content="Первый массив" HorizontalAlignment="Left" Margin="350,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Второй массив" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="redactmas" HorizontalAlignment="Center" Margin="0,155,0,0" TextWrapping="Wrap" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="267"/>

    </Grid>
</Window>
